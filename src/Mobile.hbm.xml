<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.shadab.hibernate.models.Mobile" table="mobile">
      <meta attribute="class-description">
         This class contains the employee detail.</meta>
      <id name="id" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="name" column="mobile_name" type="string"/>
      <property name="model" column="mobile_model" type="string"/>
      <property name="price" column="mobile_price" type="int"/>
   </class>
</hibernate-mapping>